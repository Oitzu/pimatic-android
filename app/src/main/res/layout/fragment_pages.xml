<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.pimatic.app.PagerSlidingTabStrip

        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        f:pstsIndicatorColor="@color/main_color"
        f:pstsUnderlineColor="@color/main_color"
        f:pstsDividerColor="@color/main_color"
        f:pstsUnderlineHeight="2px" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/device_page_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>