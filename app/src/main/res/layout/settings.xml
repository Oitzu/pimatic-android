<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignParentTop="true"
        android:text="Host:" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/protocol"
            android:entries="@array/protocols_names" />

        <EditText
            android:id="@+id/host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/response"
            android:layout_below="@+id/response"
            android:ems="10"
            android:hint="Host" />


        <EditText
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/response"
            android:layout_below="@+id/response"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="Port" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <TextView
        android:id="@+id/basicAutch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auth" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="User" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actions on save:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/deleteCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete saved trusted SSL-Certificate" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/response"
        android:layout_below="@+id/editText1"
        android:text="Save" />

</LinearLayout>
